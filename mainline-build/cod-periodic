#!/bin/bash

here=`dirname $0`
case "$here" in
/*) ;;
*)  here="`pwd`/$here" ;;
esac

locks="/run/lock/cod-status"

locker="$here/../sbin/lock-record"
if [ "$1" = "" ]; then
	"$locker" once "$locks/logs"			"$0" logs &
	"$locker"   15 "$locks/machine-check"		"$0" machine-check &
	"$locker"   60 "$locks/kteam-tools"		"$0" kteam-tools &
	"$locker"  240 "$locks/update-repos"		"$0" update-repos &
	[ -f "$locks/chroots-done" ] && \
	[ -f "$locks/kteam-tools-done" ] && \
	[ -f "$locks/update-repos-done" ] && \
	[ ! -f "$locks/mainline-worker-stop" ] && \
							"$0" mainline-worker &
	"$locker"  30 "$locks/mainline-failsafe"        "$0" mainline-worker-failsafe &
	exit 0
fi

dashboard_status="$here/../dashboard/dashboard-status"

case "$1" in
logs)
	touch "$HOME/logs/root-chroots.log"
	touch "$HOME/logs/root-gbk-cleanup.log"
	;;
machine-check)
	"$dashboard_status" "machine-check" "Host: `hostname`" "Machine Check" 20m 30m >>$HOME/logs/machine-check.log
	;;
kteam-tools)
	(cd "$HOME/kteam-tools" && git pull) 2>&1 | ts "%Y-%m-%d %H:%M:%S %z" >>$HOME/logs/update-tools.log 2>&1 && \
		"$dashboard_status" "machine-kteam-tools" "Host: `hostname`" "Update Tools" 65m 70m
	;;
update-repos)
	$HOME/kteam-tools/kernel-team-accounts/update-repos2.sh 2>&1 | ts "%Y-%m-%d %H:%M:%S %z" >>$HOME/logs/update-repos.log 2>&1 && \
		"$dashboard_status" "update-repos" "Host: `hostname`" "Update Repos" 5h 9h
	;;
mainline-worker)
	$HOME/kteam-tools/sbin/cron-start $HOME/kteam-tools/mainline-build/mainline-worker -- 'Mainline Builds' 'Mainline Worker' 30m 45m 2>&1 | ts "%Y-%m-%d %H:%M:%S %z" >>$HOME/logs/cod-worker.log 2>&1
	;;
mainline-worker-failsafe)
	$HOME/kteam-tools/mainline-build/mainline-worker-failsafe 2>&1 | ts "%Y-%m-%d %H:%M:%S %z" >>$HOME/logs/cod-worker.log 2>&1 && \
		"$dashboard_status" "mainline-builds-failsafe" "Mainline Builds" "Mainline Failsafe" 60m 65m
	;;
esac

exit 0
